pipeline {
    agent any
    stages {
	stage('before_install') {
	   steps {
		sh 'npm config set spin false'
                sh 'npm config set progress false'
	   }
	}
	stage('install') {
	   steps {
		sh 'npm install'
	   }
	}
        stage('build') {
            steps {
                sh 'npm run-script lint'
                sh 'npm run-script test:unit'
                sh 'npm run-script protractor:travis'
                sh 'node ./tests/run_e2e.js'
            }
        }
    }
}
